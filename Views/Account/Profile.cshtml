@model ogloszenia.Models.User
@inject ogloszenia.Services.ILocalizationService Localizer

@{
    ViewData["Title"] = Localizer.Get("MyProfile");
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8">
            <h1>@Localizer.Get("MyProfile")</h1>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success">
                    @TempData["SuccessMessage"]
                </div>
            }

            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">@Localizer.Get("PersonalInfo")</h5>
                </div>
                <div class="card-body">
                    <form method="post" asp-action="Profile" asp-route-id="@Model.Id">
                        <div class="mb-3">
                            <label class="form-label">@Localizer.Get("Username")</label>
                            <p class="form-control-plaintext">@Model.Username</p>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">@Localizer.Get("Email")</label>
                            <p class="form-control-plaintext">@Model.Email</p>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="firstName" class="form-label">@Localizer.Get("FirstName")</label>
                                <input type="text" class="form-control" id="firstName" name="firstName" value="@Model.FirstName" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="lastName" class="form-label">@Localizer.Get("LastName")</label>
                                <input type="text" class="form-control" id="lastName" name="lastName" value="@Model.LastName" />
                            </div>
                        </div>

                        <hr />

                        <h6>@Localizer.Get("InterfaceSettings")</h6>

                            <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="pageSize" class="form-label">@Localizer.Get("AdsPerPage")</label>
                                <select class="form-select" id="pageSize" name="pageSize">
                                    <option value="5" selected="@(Model.PageSize == 5)">5</option>
                                    <option value="10" selected="@(Model.PageSize == 10)">10</option>
                                    <option value="20" selected="@(Model.PageSize == 20)">20</option>
                                    <option value="50" selected="@(Model.PageSize == 50)">50</option>
                                </select>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label for="theme" class="form-label">@Localizer.Get("Theme")</label>
                                <select class="form-select" id="theme" name="theme">
                                    <option value="default" selected="@(Model.Theme == "default")">@Localizer.Get("Default")</option>
                                    <option value="dark" selected="@(Model.Theme == "dark")">@Localizer.Get("Dark")</option>
                                    <option value="blue" selected="@(Model.Theme == "blue")">@Localizer.Get("Blue")</option>
                                </select>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="language" class="form-label">@Localizer.Get("Language")</label>
                            <select class="form-select" id="language" name="language">
                                <option value="pl" selected="@(Model.Language == "pl")">@Localizer.Get("Polish")</option>
                                <option value="en" selected="@(Model.Language == "en")">@Localizer.Get("English")</option>
                                <option value="de" selected="@(Model.Language == "de")">@Localizer.Get("German")</option>
                            </select>
                        </div>

                        <button type="submit" class="btn btn-primary">@Localizer.Get("SaveChanges")</button>
                    </form>
                </div>
            </div>

            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">@Localizer.Get("Security")</h5>
                </div>
                <div class="card-body">
                    <a href="/Account/ChangePassword" class="btn btn-warning">@Localizer.Get("ChangePassword")</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">@Localizer.Get("MyAds")</h5>
                </div>
                <div class="card-body">
                    <p>
                        <strong>@Localizer.Get("Added"):</strong> @Model.Advertisements.Where(a => a.UserId == Model.Id).Count()
                    </p>
                    <a href="/Advertisement/Index?userId=@Model.Id" class="btn btn-sm btn-primary">@Localizer.Get("ViewMyAds")</a>
                </div>
            </div>

            <div class="card mt-3">
                <div class="card-header">
                    <h5 class="mb-0">@Localizer.Get("AccountStatus")</h5>
                </div>
                <div class="card-body">
                    <p>
                        <strong>@Localizer.Get("Status"):</strong>
                        <span class="badge bg-success">@(Model.IsActive ? Localizer.Get("Active") : Localizer.Get("Inactive"))</span>
                    </p>
                    <p>
                        <strong>@Localizer.Get("Type"):</strong>
                        <span class="badge bg-info">@(Model.IsAdmin ? Localizer.Get("Administrator") : Localizer.Get("User"))</span>
                    </p>
                    <p>
                        <strong>@Localizer.Get("AccountSince"):</strong> @Model.CreatedAt.ToString("dd.MM.yyyy")
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
