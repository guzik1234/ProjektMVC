@inject ogloszenia.Services.ILocalizationService Localizer
@{
    ViewData["Title"] = Localizer.Get("ChangePassword");
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card">
                <div class="card-header bg-warning text-dark">
                    <h4 class="mb-0">Zmień hasło</h4>
                </div>
                <div class="card-body">
                    <form method="post" asp-action="ChangePassword">
                        <div class="mb-3">
                            <label for="oldPassword" class="form-label">Stare hasło *</label>
                            <input type="password" class="form-control" id="oldPassword" name="oldPassword" required />
                        </div>

                        <div class="mb-3">
                            <label for="newPassword" class="form-label">Nowe hasło *</label>
                            <input type="password" class="form-control" id="newPassword" name="newPassword" required />
                        </div>

                        <div class="mb-3">
                            <label for="confirmPassword" class="form-label">Potwierdzenie nowego hasła *</label>
                            <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" required />
                        </div>

                        @if (!ViewData.ModelState.IsValid)
                        {
                            <div class="alert alert-danger">
                                @Html.ValidationSummary()
                            </div>
                        }

                        <button type="submit" class="btn btn-warning w-100">Zmień hasło</button>
                    </form>

                    <div class="mt-3">
                        <a href="/Account/Profile" class="btn btn-secondary w-100">Wróć do profilu</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
