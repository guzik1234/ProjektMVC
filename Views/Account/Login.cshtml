@{
    ViewData["Title"] = "Logowanie";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Logowanie</h4>
                </div>
                <div class="card-body">
                    <form method="post" asp-action="Login">
                        <div class="mb-3">
                            <label for="username" class="form-label">Nazwa użytkownika lub email *</label>
                            <input type="text" class="form-control" id="username" name="username" required autofocus />
                        </div>

                        <div class="mb-3">
                            <label for="password" class="form-label">Hasło *</label>
                            <input type="password" class="form-control" id="password" name="password" required />
                        </div>

                        <div class="form-check mb-3">
                            <input class="form-check-input" type="checkbox" id="rememberMe" />
                            <label class="form-check-label" for="rememberMe">
                                Zapamiętaj mnie
                            </label>
                        </div>

                        @if (!ViewData.ModelState.IsValid)
                        {
                            <div class="alert alert-danger">
                                @Html.ValidationSummary()
                            </div>
                        }

                        <button type="submit" class="btn btn-primary w-100">Zaloguj się</button>
                    </form>

                    <div class="mt-3 text-center">
                        <p>Nie masz konta? <a href="/Account/Register">Zarejestruj się</a></p>
                        <p><a href="/Account/ForgotPassword">Zapomniałeś hasła?</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
