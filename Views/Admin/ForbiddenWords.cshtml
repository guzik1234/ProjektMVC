@{
    ViewData["Title"] = "Słowa zakazane";
    var forbiddenWords = ViewBag.ForbiddenWords as List<string>;
}

<div class="container mt-4">
    <h1>Zarządzanie słowami zakazanymi</h1>

    <div class="row mt-4">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h5>Słowa zakazane</h5>
                </div>
                <div class="card-body">
                    @if (forbiddenWords != null && forbiddenWords.Count > 0)
                    {
                        <div class="list-group">
                            @foreach (var word in forbiddenWords)
                            {
                                <div class="list-group-item d-flex justify-content-between align-items-center">
                                    <span>@word</span>
                                    <form method="post" asp-action="RemoveForbiddenWord" style="display: inline;">
                                        <input type="hidden" name="word" value="@word" />
                                        <button type="submit" class="btn btn-sm btn-danger">Usuń</button>
                                    </form>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">Brak zakazanych słów</p>
                    }
                </div>
            </div>

            <div class="card mt-4">
                <div class="card-header">
                    <h5>Dodaj nowe słowo</h5>
                </div>
                <div class="card-body">
                    <form method="post" asp-action="AddForbiddenWord">
                        <div class="input-group">
                            <input type="text" class="form-control" name="word" placeholder="Wpisz słowo zakazane..." required />
                            <button type="submit" class="btn btn-primary">Dodaj</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-4">
        <a href="/Admin/Dashboard" class="btn btn-secondary">Wróć do panelu</a>
    </div>
</div>
