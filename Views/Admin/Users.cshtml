@model List<ogloszenia.Models.User>

@{
    ViewData["Title"] = "Zarządzanie użytkownikami";
    int currentPage = ViewBag.CurrentPage ?? 1;
    int totalPages = ViewBag.TotalPages ?? 1;
}

<div class="container mt-4">
    <h1>Zarządzanie użytkownikami</h1>

    @if (Model != null && Model.Count > 0)
    {
        <div class="table-responsive mt-4">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Użytkownik</th>
                        <th>Email</th>
                        <th>Typ</th>
                        <th>Status</th>
                        <th>Akcje</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.Id</td>
                            <td>@user.FirstName @user.LastName (@user.Username)</td>
                            <td>@user.Email</td>
                            <td>
                                @if (user.IsAdmin)
                                {
                                    <span class="badge bg-danger">Admin</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Użytkownik</span>
                                }
                            </td>
                            <td>
                                @if (user.IsActive)
                                {
                                    <span class="badge bg-success">Aktywny</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Nieaktywny</span>
                                }
                            </td>
                            <td>
                                <form method="post" style="display: inline;">
                                    <button type="submit" formaction="/Admin/ToggleAdmin" formmethod="post" name="userId" value="@user.Id" class="btn btn-sm btn-warning">
                                        @(user.IsAdmin ? "Odbierz admin" : "Daj admin")
                                    </button>
                                    <button type="submit" formaction="/Admin/DeactivateUser" formmethod="post" name="userId" value="@user.Id" class="btn btn-sm btn-danger">
                                        @(user.IsActive ? "Dezaktywuj" : "Aktywuj")
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @if (totalPages > 1)
        {
            <nav>
                <ul class="pagination justify-content-center">
                    @if (currentPage > 1)
                    {
                        <li class="page-item"><a class="page-link" href="?page=1">Pierwsza</a></li>
                        <li class="page-item"><a class="page-link" href="?page=@(currentPage - 1)">Poprzednia</a></li>
                    }

                    @for (int i = Math.Max(1, currentPage - 2); i <= Math.Min(totalPages, currentPage + 2); i++)
                    {
                        @if (i == currentPage)
                        {
                            <li class="page-item active"><span class="page-link">@i</span></li>
                        }
                        else
                        {
                            <li class="page-item"><a class="page-link" href="?page=@i">@i</a></li>
                        }
                    }

                    @if (currentPage < totalPages)
                    {
                        <li class="page-item"><a class="page-link" href="?page=@(currentPage + 1)">Następna</a></li>
                        <li class="page-item"><a class="page-link" href="?page=@totalPages">Ostatnia</a></li>
                    }
                </ul>
            </nav>
        }
    }
    else
    {
        <div class="alert alert-info mt-4">Brak użytkowników</div>
    }

    <div class="mt-4">
        <a href="/Admin/Dashboard" class="btn btn-secondary">Wróć do panelu</a>
    </div>
</div>
