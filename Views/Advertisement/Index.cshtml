@model List<ogloszenia.Models.Advertisement>

@{
    ViewData["Title"] = Localizer.Get("Advertisements");
    int currentPage = ViewBag.CurrentPage ?? 1;
    int totalPages = ViewBag.TotalPages ?? 1;
    string searchQuery = ViewBag.SearchQuery ?? "";
    var category = ViewBag.Category as ogloszenia.Models.Category;
    int? userId = ViewBag.UserId;
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h1>
                @if (category != null)
                {
                    <text>@Localizer.Get("AdsFromCategory"): @category.Name</text>
                }
                else if (!string.IsNullOrEmpty(searchQuery))
                {
                    <text>@Localizer.Get("SearchResults"): "@searchQuery"</text>
                }
                else
                {
                    <text>@Localizer.Get("AllAdvertisements")</text>
                }
            </h1>
        </div>
        <div class="col-md-4">
            <form method="get" action="/Advertisement/Search" class="d-flex gap-2">
                <input type="text" name="q" class="form-control" placeholder="@Localizer.Get("SearchAds")" value="@searchQuery" />
                <button type="submit" class="btn btn-primary">@Localizer.Get("Search")</button>
            </form>
        </div>
    </div>

    @if (Model != null && Model.Count > 0)
    {
        <div class="row">
            @foreach (var ad in Model)
            {
                <div class="col-md-6 mb-4">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title">
                                <a href="/Advertisement/Details/@ad.Id" class="text-decoration-none">@ad.Title</a>
                            </h5>
                            <p class="card-text text-muted">
                                <small>@Localizer.Get("AddedOn"): @ad.CreatedAt.ToString("dd.MM.yyyy HH:mm")</small><br />
                                <small>üëÅÔ∏è @Localizer.Get("Views"): @ad.ViewCount</small>
                            </p>
                            <p class="card-text">@ad.Description.Substring(0, Math.Min(150, ad.Description.Length))...</p>
                            
                            <div class="mb-2">
                                @foreach (var cat in ad.Categories)
                                {
                                    <span class="badge bg-info">@cat.Name</span>
                                }
                            </div>

                            <p class="text-muted">
                                <small>@Localizer.Get("Author"): @ad.User?.FirstName @ad.User?.LastName</small>
                            </p>

                            <a href="/Advertisement/Details/@ad.Id" class="btn btn-sm btn-primary">@Localizer.Get("Details")</a>
                            @{
                                var currentUserId = Context.Session.GetInt32("UserId");
                                var isAdmin = Context.Session.GetInt32("IsAdmin") == 1;
                                var isOwner = currentUserId.HasValue && currentUserId.Value == ad.UserId;
                            }
                            @if (isOwner || isAdmin)
                            {
                                <a href="/Advertisement/Edit/@ad.Id" class="btn btn-sm btn-warning">@Localizer.Get("Edit")</a>
                                <a href="/Advertisement/Delete/@ad.Id" class="btn btn-sm btn-danger">@Localizer.Get("Delete")</a>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Paginacja -->
        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center mt-4">
                @if (currentPage > 1)
                {
                    <li class="page-item">
                        <a class="page-link" href="?page=1&q=@searchQuery@(userId.HasValue ? "&userId=" + userId.Value : "")">@Localizer.Get("First")</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="?page=@(currentPage - 1)&q=@searchQuery@(userId.HasValue ? "&userId=" + userId.Value : "")">@Localizer.Get("Previous")</a>
                    </li>
                }

                @for (int i = Math.Max(1, currentPage - 2); i <= Math.Min(totalPages, currentPage + 2); i++)
                {
                    @if (i == currentPage)
                    {
                        <li class="page-item active"><span class="page-link">@i</span></li>
                    }
                    else
                    {
                        <li class="page-item"><a class="page-link" href="?page=@i&q=@searchQuery@(userId.HasValue ? "&userId=" + userId.Value : "")">@i</a></li>
                    }
                }

                @if (currentPage < totalPages)
                {
                    <li class="page-item">
                        <a class="page-link" href="?page=@(currentPage + 1)&q=@searchQuery@(userId.HasValue ? "&userId=" + userId.Value : "")">@Localizer.Get("Next")</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="?page=@totalPages&q=@searchQuery@(userId.HasValue ? "&userId=" + userId.Value : "")">@Localizer.Get("Last")</a>
                    </li>
                }
            </ul>
        </nav>
    }
    else
    {
        <div class="alert alert-info">
            <h5>@Localizer.Get("NoAdsFound")</h5>
            <p>@Localizer.Get("NoAdsMessage")</p>
        </div>
    }
</div>
