@model ogloszenia.Models.Advertisement

@{
    ViewData["Title"] = "Edytuj ogłoszenie";
    var categories = ViewBag.Categories as List<ogloszenia.Models.Category>;
    var selectedCategoryIds = ViewBag.SelectedCategoryIds as int[];
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h1>Edytuj ogłoszenie</h1>

            <form method="post" asp-action="Edit" asp-route-id="@Model.Id" class="mt-4">
                <input type="hidden" name="id" value="@Model.Id" />

                <div class="mb-3">
                    <label for="Title" class="form-label">Tytuł *</label>
                    <input type="text" class="form-control" id="Title" name="Title" value="@Model.Title" required />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label for="Description" class="form-label">Krótki opis *</label>
                    <textarea class="form-control" id="Description" name="Description" rows="3" required>@Model.Description</textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label for="DetailedDescription" class="form-label">Szczegółowy opis</label>
                    <textarea class="form-control" id="DetailedDescription" name="DetailedDescription" rows="5">@Model.DetailedDescription</textarea>
                    <small class="form-text text-muted">Dozwolone tagi: &lt;p&gt;, &lt;br&gt;, &lt;strong&gt;, &lt;em&gt;, &lt;a&gt;</small>
                </div>

                <div class="mb-3">
                    <label for="Categories" class="form-label">Kategorie *</label>
                    <div class="form-check">
                        @if (categories != null)
                        {
                            @foreach (var category in categories)
                            {
                                var isSelected = selectedCategoryIds?.Contains(category.Id) ?? false;
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" name="selectedCategories" value="@category.Id" id="cat@category.Id" @(isSelected ? "checked" : "") />
                                    <label class="form-check-label" for="cat@category.Id">
                                        @category.Name
                                    </label>
                                </div>

                                @if (category.ChildCategories != null && category.ChildCategories.Count > 0)
                                {
                                    <div class="ms-3">
                                        @foreach (var child in category.ChildCategories)
                                        {
                                            var isChildSelected = selectedCategoryIds?.Contains(child.Id) ?? false;
                                            <div class="form-check">
                                                <input class="form-check-input" type="checkbox" name="selectedCategories" value="@child.Id" id="cat@child.Id" @(isChildSelected ? "checked" : "") />
                                                <label class="form-check-label" for="cat@child.Id">
                                                    └─ @child.Name
                                                </label>
                                            </div>
                                        }
                                    </div>
                                }
                            }
                        }
                    </div>
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary btn-lg">Zapisz zmiany</button>
                    <a href="/Advertisement/Details/@Model.Id" class="btn btn-secondary btn-lg">Anuluj</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
