@model List<ogloszenia.Models.Advertisement>

@inject ogloszenia.Services.ILocalizationService Localizer
@{
    ViewData["Title"] = Localizer.Get("SearchResultsTitle");
    string query = ViewBag.Query ?? "";
    int currentPage = ViewBag.CurrentPage ?? 1;
    int totalPages = ViewBag.TotalPages ?? 1;
    int totalResults = ViewBag.TotalResults ?? 0;
    string categoryIds = ViewBag.CategoryIds ?? "";
    var selectedCategoryIds = ViewBag.SelectedCategoryIds as List<int> ?? new List<int>();
    var selectedCategories = ViewBag.SelectedCategories as List<Category> ?? new List<Category>();
    var allCategories = ViewBag.AllCategories as List<Category>;
}

<div class="container mt-4">
    <h1>@Localizer.Get("SearchResultsFor"): "@query"</h1>

    <!-- Aktywne filtry -->
    @if (!string.IsNullOrEmpty(query) || selectedCategories.Any())
    {
        <div class="card mb-3 border-info">
            <div class="card-body py-2">
                <h6 class="mb-2">
                    <i class="bi bi-funnel"></i> @Localizer.Get("ActiveFilters"):
                </h6>
                <div class="d-flex flex-wrap gap-2 align-items-center">
                    @if (!string.IsNullOrEmpty(query))
                    {
                        <span class="badge bg-info text-dark px-3 py-2">
                            <i class="bi bi-search"></i> "@query"
                            <a href="@Url.Action("Search", new { q = "", categoryIds = categoryIds })" 
                               class="text-dark ms-2 text-decoration-none" title="@Localizer.Get("ClearFilters")">
                                <i class="bi bi-x-circle"></i>
                            </a>
                        </span>
                    }
                    
                    @foreach (var cat in selectedCategories)
                    {
                        var remainingCategories = string.Join(",", selectedCategoryIds.Where(id => id != cat.Id));
                        <span class="badge bg-success px-3 py-2">
                            <i class="bi bi-tag"></i> @cat.Name
                            <a href="@Url.Action("Search", new { q = query, categoryIds = remainingCategories })" 
                               class="text-white ms-2 text-decoration-none" title="@Localizer.Get("ClearFilters")">
                                <i class="bi bi-x-circle"></i>
                            </a>
                        </span>
                    }

                    @if (!string.IsNullOrEmpty(query) || selectedCategories.Any())
                    {
                        <a href="@Url.Action("Search")" class="btn btn-sm btn-outline-secondary">
                            <i class="bi bi-x-lg"></i> @Localizer.Get("ClearFilters")
                        </a>
                    }
                </div>
            </div>
        </div>
    }

    <div class="card mb-4">
        <div class="card-body">
            <form method="get" asp-action="Search" id="searchForm">
                <div class="row g-2">
                    <div class="col-md-5">
                        <input type="text" class="form-control" name="q" placeholder="@Localizer.Get("SearchPlaceholder")" value="@query" />
                    </div>
                    <div class="col-md-4">
                        <div id="categoryCheckboxes" class="border rounded p-2" style="max-height: 200px; overflow-y: auto;">
                            @if (allCategories != null)
                            {
                                foreach (var cat in allCategories)
                                {
                                    <div class="form-check">
                                        <input type="checkbox" class="form-check-input category-checkbox" 
                                               name="categoryIds" value="@cat.Id" id="cat_@cat.Id"
                                               @(selectedCategoryIds.Contains(cat.Id) ? "checked" : "") />
                                        <label class="form-check-label fw-bold" for="cat_@cat.Id">
                                            @cat.Name
                                        </label>
                                    </div>
                                    
                                    @if (cat.ChildCategories != null && cat.ChildCategories.Count > 0)
                                    {
                                        <div class="ms-3">
                                            @foreach (var child in cat.ChildCategories)
                                            {
                                                <div class="form-check">
                                                    <input type="checkbox" class="form-check-input category-checkbox" 
                                                           name="categoryIds" value="@child.Id" id="cat_@child.Id"
                                                           @(selectedCategoryIds.Contains(child.Id) ? "checked" : "") />
                                                    <label class="form-check-label" for="cat_@child.Id">
                                                        └─ @child.Name
                                                    </label>
                                                </div>
                                            }
                                        </div>
                                    }
                                }
                            }
                        </div>
                        <small class="text-muted">@Localizer.Get("SelectCategories")</small>
                    </div>
                    <div class="col-md-3">
                        <button type="submit" class="btn btn-primary w-100">@Localizer.Get("Search")</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    @if (Model != null && Model.Any())
    {
        <p>@Localizer.Get("Found") <strong>@totalResults</strong> @Localizer.Get("Advertisements2")</p>

        <div class="row">
            @foreach (var ad in Model)
            {
                <div class="col-md-6 mb-3">
                    <div class="card h-100">
                        @if (ad.Media != null && ad.Media.Any())
                        {
                            <img src="@ad.Media.First().FilePath" class="card-img-top" alt="@ad.Title" style="height: 200px; object-fit: cover;">
                        }
                        <div class="card-body">
                            <h5 class="card-title">@ad.Title</h5>
                            <p class="card-text">
                                @(ad.Description.Length > 150 ? ad.Description.Substring(0, 150) + "..." : ad.Description)
                            </p>
                            <div class="mb-2">
                                @foreach (var category in ad.Categories)
                                {
                                    <span class="badge bg-secondary">@category.Name</span>
                                }
                            </div>
                            <div class="d-flex justify-content-between align-items-center">
                                <small class="text-muted">
                                    <i class="bi bi-eye"></i> @ad.ViewCount @Localizer.Get("ViewsCount")
                                </small>
                                <small class="text-muted">@ad.CreatedAt.ToString("dd.MM.yyyy")</small>
                            </div>
                        </div>
                        <div class="card-footer">
                            <a href="/Advertisement/Details/@ad.Id" class="btn btn-sm btn-primary">@Localizer.Get("ViewDetails")</a>
                        </div>
                    </div>
                </div>
            }
        </div>

        @if (totalPages > 1)
        {
            <nav aria-label="@Localizer.Get("First")">
                <ul class="pagination justify-content-center">
                    @if (currentPage > 1)
                    {
                        <li class="page-item">
                            <a class="page-link" href="?q=@query&page=1&pageSize=@ViewBag.PageSize">@Localizer.Get("First")</a>
                        </li>
                        <li class="page-item">
                            <a class="page-link" href="?q=@query&categoryIds=@categoryIds&page=@(currentPage - 1)&pageSize=@ViewBag.PageSize">@Localizer.Get("Previous")</a>
                        </li>
                    }

                    @for (int i = Math.Max(1, currentPage - 2); i <= Math.Min(totalPages, currentPage + 2); i++)
                    {
                        @if (i == currentPage)
                        {
                            <li class="page-item active"><span class="page-link">@i</span></li>
                        }
                        else
                        {
                            <li class="page-item"><a class="page-link" href="?q=@query&categoryIds=@categoryIds&page=@i&pageSize=@ViewBag.PageSize">@i</a></li>
                        }
                    }

                    @if (currentPage < totalPages)
                    {
                        <li class="page-item">
                            <a class="page-link" href="?q=@query&categoryIds=@categoryIds&page=@(currentPage + 1)&pageSize=@ViewBag.PageSize">@Localizer.Get("Next")</a>
                        </li>
                        <li class="page-item">
                            <a class="page-link" href="?q=@query&categoryIds=@categoryIds&page=@totalPages&pageSize=@ViewBag.PageSize">@Localizer.Get("Last")</a>
                        </li>
                    }
                </ul>
            </nav>
        }
    }
    else
    {
        <div class="alert alert-info">
            @Localizer.Get("NoResultsFound")
        </div>
    }
</div>
